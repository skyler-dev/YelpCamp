<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">등록하기</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">이름</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                유효합니다!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">이메일</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                유효합니다!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">비밀번호</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                유효합니다!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">등록하기</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






